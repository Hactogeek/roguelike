#include <stdio.h>
#include <stdlib.h>
#include <pile_tab.h>
#include <ctype.h>

void calcul_postfixe(int n){
	char saisie;
	int a,b;

	do{
		printf("veuillez saisir un caractere");
		scanf("%c",&saisie);
		
		if(saisie != '\n'){
			if(!isdigit(caractere)){
				depile(&a);
				depile(&b);
			}
			
			switch(saisie){
				case '+' : empile(a+b);
				case '-' : empile(a-b);
				case '*' : empile(a*b);
				case '/' : empile(a/b);
				default : empile(caractere);
			}
		}
	}while(saisie!='\n');
	
	depile(&a);
	printf("Le resultat est : %i",a);
	
}
